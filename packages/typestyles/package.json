{
  "name": "typestyles",
  "version": "0.1.0",
  "description": "CSS-in-TypeScript that embraces CSS instead of hiding from it",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server.d.ts",
        "default": "./dist/server.js"
      },
      "require": {
        "types": "./dist/server.d.cts",
        "default": "./dist/server.cjs"
      }
    },
    "./hmr": {
      "import": {
        "types": "./dist/hmr.d.ts",
        "default": "./dist/hmr.js"
      },
      "require": {
        "types": "./dist/hmr.d.cts",
        "default": "./dist/hmr.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "css",
    "css-in-js",
    "css-in-ts",
    "typescript",
    "styles",
    "design-tokens",
    "css-custom-properties"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/typestyles/typestyles",
    "directory": "packages/typestyles"
  },
  "dependencies": {
    "csstype": "^3.1.3"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "@vitest/coverage-v8": "^3.0.0",
    "jsdom": "^25.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^3.0.0"
  }
}
